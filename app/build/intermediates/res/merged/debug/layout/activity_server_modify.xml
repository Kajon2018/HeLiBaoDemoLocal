<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="@drawable/sdktop_bg"
        >
         <Button 
        android:id="@+id/back"
        android:layout_width="20dip"
        android:layout_height="36dip"
        android:background="@drawable/back_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        />
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="修改服务器地址" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="420dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:text="请输入新的服务器地址"
            android:textSize="20sp"
            />


        <EditText
            android:id="@+id/server_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_edit"
            android:textColorHint="@color/dark_gray_line" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginTop="20dip"
            android:text="温馨提示：请输入有效的服务器地址+端口号，如192.168.10.186：7001"
            android:textSize="20sp"
            />
    </LinearLayout>


   <Button 
        android:id="@+id/ok"
        android:layout_width="420dip"
        android:layout_height="45dip"
        android:text="确认"
        android:gravity="center"
        android:layout_marginTop="50dip"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_bg"
        />
</LinearLayout>
